@page
@using ClubWestRFC.Utility

@*As there is no model we have a work around with line2 and this if statement*@
@if(User.IsInRole(SD.AdminRole))
{


<div class="border backgroundWhite container">
    <div class="row">

        <div class="col-6 ">

            <h2 class="text-primary">Membership Price List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create
            </a>
        </div>

    </div>

    <br />
    <br />

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>

                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Membership Type</th>

                <th></th>

            </tr>
        </thead>

    </table>

</div>

}
else{
    <div>
        <h2 class="text-danger">Access Denied</h2>
    </div>
}

@section Scripts{

    <script src="~/js/memberprice.js"></script>
}


