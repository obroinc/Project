@page
@model ClubWestRFC.Pages.Members.Home.IndexModel
@{
    ViewData["Title"] = "Index";

}

<h1>Please choose what mebership you wol like or Club Merchadise you woud like to order</h1>

@foreach (var category in Model.CategoryList)
{
    @if (Model.MemberpriceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success pl-1"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var memberprice in Model.MemberpriceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #008cba; border-radius: 5px; ">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@memberprice.Name </b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            
                                            <div class="col-6 text-center h4" style="color:maroon;"><b>€ @memberprice.Price</b></div>
                                        </div>
                                        <img src="@memberprice.image" class="card-img-top p-2 rounded" width="200" height="200"/>

                                        <a asp-page="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@memberprice.Id">Details</a>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
}